<UserControl x:Class="ViewerCryptocurrencies.UI.Views.InfoCryptocurrencyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ViewerCryptocurrencies.UI.Views"
             mc:Ignorable="d" 
             Background="#FF99B1CE" Foreground="#FF464141"
             >
    <Border
         Width="551"
         Height="250"
         BorderBrush="#323437"
         BorderThickness="1"
         CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="183*"/>
                <RowDefinition Height="65*"/>
            </Grid.RowDefinitions>
           
           
            
            <StackPanel
                 Grid.Row="2"
                 Margin="454,10,0,10"
                 HorizontalAlignment="Left"
                 Orientation="Horizontal" Width="75">

                <Button
                     Margin="5"
                     Style="{StaticResource ButtonText}"
                     Command="{Binding SubmitCommand}"
                     Content="Submit"
                     Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
